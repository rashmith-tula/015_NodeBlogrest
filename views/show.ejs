<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header"> <%= blog.title %> </div>
  <div class="ui top attached segment">
     <div class="item">
      <div class="ui centered rounded image">
       <img src="<%= blog.image %>" > 
       </div>
     </div>
     <div class="content">
       <div class="meta">
        <span> <%= blog.created.toDateString() %> </span>
       </div>
       <div class="description">
         <p> <%= blog.body %> </p>
       </div>
        <div class="ui divider"></div>
        <a href="/blogs/<%= blog._id %>/edit" class="ui basic violet basic button"> Edit &nbsp; <i class="edit icon"></i></a>
        <form style="display: inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
           <button class="ui red basic button">Delete <i class="remove icon"></i></button> 
        </form>
     </div>
  </div>
</div>

<% include ./partials/footer %> 