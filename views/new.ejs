<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
       <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" required>
       </div>  
       <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" required>
       </div>
       <div class="field">
        <label>Blog Content</label>
        <textarea name="blog[body]" required></textarea>
       </div>
       <button class="ui primary button">Create Post</button>
    </form>
</div>

